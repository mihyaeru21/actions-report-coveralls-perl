{
  "name": "actions-report-coveralls-perl",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action for Devel::Cover::Report::Coveralls",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map -o dist/main --license licenses.txt lib/main.js && ncc build --source-map -o dist/post --license licenses.txt lib/post.js",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mihyaeru21/actions-report-coveralls-perl.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "perl",
    "coveralls"
  ],
  "author": "Mihyaeru",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^14.14.32",
    "@typescript-eslint/parser": "^4.15.2",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.21.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^24.9.0",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^24.3.0",
    "typescript": "^4.2.2"
  }
}
